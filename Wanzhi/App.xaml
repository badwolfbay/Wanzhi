<Application x:Class="Wanzhi.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Wanzhi"
             xmlns:tb="http://www.hardcodet.net/taskbar">
    <Application.Resources>
        <tb:TaskbarIcon x:Key="TrayIcon"
                        IconSource="/Resources/logo.ico"
                        ToolTipText="万枝 - 诗词壁纸"
                        MenuActivation="RightClick"
                        TrayMouseDoubleClick="TrayIcon_DoubleClick">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="设置(_S)" Click="Settings_Click"/>
                    <MenuItem Header="刷新诗词(_R)" Click="Refresh_Click"/>
                    <Separator/>
                    <MenuItem Header="退出(_X)" Click="Exit_Click"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Application.Resources>
</Application>
